<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ScoreRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:max">5</item>
        <item name="colorControlNormal">@color/star_yellow</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>

        <style name="NoPlacesFoundText">
            <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">18sp</item>
        </style>

        <style name="PlaceListItemTitleText">
            <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">18sp</item>
        </style>

</resources>
